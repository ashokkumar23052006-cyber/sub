# Simple Python program

def main():
    name = input("Enter your name: ")
    age = int(input("Enter your age: "))
    
    future_age = age + 5
    
    print("\nHello,", name + "!")
    print("You are currently", age, "years old.")
    print("In 5 years, you will be", future_age, "years old.")

if __name__ == "__main__":
    main()
